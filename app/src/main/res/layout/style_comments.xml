<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Pic_User_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_black_24dp"
            android:tint="#000000"
            app:civ_border_color="#000000" />

        <ProgressBar
            android:id="@+id/progress_picuser_inpost_comment"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:theme="@style/AppTheme.NoActionBar"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mvboli"
            android:text="Ziad Al Kasaji" />

        <TextView
            android:id="@+id/txt_comment_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="message . "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_comment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date . " />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#DF302B2B" />
    </LinearLayout>
</LinearLayout>