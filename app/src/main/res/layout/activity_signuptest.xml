<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Utilis.Material_Chip_View">

    <ImageView
        android:id="@+id/img_down_chippage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:scaleX="1.03"
        android:scrollX="-3dp"
        android:scrollY="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_signuppage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/f"
        android:tint="#000000"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_down_chippage" />

    <ImageView
        android:id="@+id/img_top_chippage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:scaleX="1.03"
        android:scrollX="3dp"
        android:scrollY="-6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_main_signup_page"
        app:srcCompat="@drawable/buttom" />

    <Button
        android:id="@+id/btn_next_chippage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@drawable/buttonnext"
        app:layout_constraintBottom_toBottomOf="@+id/img_top_chippage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_main_signup_page" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main_signup_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_next_chippage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_signuppage">

        <ScrollView
            android:id="@+id/scroll_chippage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_person_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/FullName"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_Username_signup_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_email_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Email"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_Email_signup_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_phone_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Phone"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_phone_signup_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_vpn_key_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Pass"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_password_signup_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_share"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_check_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Confrimation_pass"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_confirm_pass_signup_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/Relayout_signuppage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_Aleady_a_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/Aleady_a_member"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txt_Login_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/Login"
            android:textColor="#7F261E" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>