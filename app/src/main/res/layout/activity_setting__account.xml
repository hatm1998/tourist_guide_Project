<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Account.Setting_Account">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:scaleX="1.03"
        android:scrollX="-3dp"
        android:scrollY="6dp"
        android:src="@drawable/top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_setting"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="15dp"
        android:src="@drawable/ic_person_black_24dp"
        android:tint="#000000"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_down_chippage" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_setting_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_setting">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_person_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/FullName"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_Username_Account_Setting"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_email_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Email"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_Email_account_setting"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_phone_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Phone"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_phone_account_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="@+id/scroll_chippage"
                        app:layout_constraintEnd_toStartOf="@+id/scroll_chippage"
                        app:layout_constraintTop_toTopOf="@+id/scroll_chippage"
                        app:srcCompat="@drawable/left" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                app:srcCompat="@drawable/ic_vpn_key_black_25dp"
                                tools:ignore="VectorDrawableCompat" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:hint="@string/Pass"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_password_account_page"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/simsun"
                        android:text="DearTourist Please Choose the Place you want to visit"
                        android:textAlignment="center"
                        android:textColor="#1A1B16"
                        android:textSize="16sp" />

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/flayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20sp"
                        app:flChildSpacing="6dp"
                        app:flChildSpacingForLastRow="align"
                        app:flFlow="true"
                        app:flRowSpacing="8dp"
                        app:flRowVerticalGravity="bottom">


                    </com.nex3z.flowlayout.FlowLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_setting_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#E6813B"
        android:text="@string/Save"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>