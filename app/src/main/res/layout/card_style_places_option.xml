<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card__Resturant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_name_Resturant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME PLACE "
                android:textColor="#343335"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtaddress_Resturant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADDRESS PLACE"
                android:textColor="#5A595A" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Tet : "
                    android:textColor="#424142" />

                <TextView
                    android:id="@+id/txtTel_Resturant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="7dp"
                    android:text="(06) 464 1261"
                    android:textColor="#2680CA" />

                <ImageButton
                    android:id="@+id/btn_Tel_Resturant"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/style_btn_share_eventdisplay"
                    android:elevation="3dp"
                    android:src="@drawable/iconphone" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WebSite : "
                    android:textColor="#424142" />

                <TextView
                    android:id="@+id/txtwebsite_Resturant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:inputType="textWebEditText"
                    android:text="www"
                    android:textColor="#2680CA"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State : "
                    android:textColor="#424142" />

                <TextView
                    android:id="@+id/txt_state_Resturant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="Open"
                    android:textColor="#2680CA" />
            </TableRow>

            <Button
                android:id="@+id/btn_location_Resturant"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/style_btn_share_eventdisplay"
                android:drawableStart="@drawable/ic_location_on"
                android:gravity="center"
                android:inputType="text"
                android:paddingEnd="4dp"
                android:text="30 .0 Km"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:id="@+id/view13"
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/img_Resturant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:scaleType="fitXY"
                    app:srcCompat="@color/common_google_signin_btn_text_light_focused" />

                <ProgressBar
                    android:id="@+id/progressBar_Resturant"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtnum_photo_Resturant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:background="#95070000"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingStart="10dp"
                    android:text="Photo : 5"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </FrameLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtrating_Resturant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="2.5"
                    android:textColor="#FF5908"
                    android:textSize="17sp" />

                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/ratingBar_Resturant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:gravity="center_vertical"></com.hedgehog.ratingbar.RatingBar>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/user_rating_Resturant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User Rating"
                    android:textColor="#2680CA" />

                <TextView
                    android:id="@+id/level_Resturant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Level"
                    android:textColor="#2680CA" />
            </TableRow>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>